<h2>Registro</h2>

<% resource.build_hotel %>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

    <%= f.fields_for :hotel do |hotel_form| %>
	<div class="field">
	    <%= hotel_form.label :name, 'Nombre del Hotel:' %>
	    <%= hotel_form.text_field :name, :class => 'input-xlarge' %>
	</div>
	<div class="field">
	    <%= hotel_form.label :destination_id, 'Destino:' %>
	    <%= hotel_form.collection_select :destination_id, Destination.all, :id, :name, :prompt => 'Seleccionar destino' %>
	</div>
	<div class="field">
	    <%= hotel_form.label :fare_id, 'Rango de tarifa:' %>
	    <%= hotel_form.collection_select :fare_id, Fare.all, :id, :name, :prompt => 'Seleccionar rango' %>
	</div>
    <% end %>

    <div>
	<%= f.label :email, 'E-mail:' %>
	<%= f.email_field :email, :autofocus => true, :class => 'input-xlarge' %>
    </div>

    <div>
	<%= f.label :password, 'Contraseña:' %>
	<%= f.password_field :password, :class => 'input-xlarge' %>
    </div>

    <div>
	<%= f.label :password_confirmation, 'Confirmar contraseña:' %>
	<%= f.password_field :password_confirmation, :class => 'input-xlarge' %>
    </div>

    <div><%= f.submit "Registrar", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
