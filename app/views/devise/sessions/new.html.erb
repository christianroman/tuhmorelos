<h2>Iniciar sesión</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div class="field">
	<%= f.label :email, 'E-mail:' %>
	<%= f.email_field :email, :autofocus => true, :class => 'input-xlarge' %>
    </div>

    <div class="field">
	<%= f.label :password, 'Contraseña:' %>
	<%= f.password_field :password, :class => 'input-xlarge' %>
    </div>

    <% if devise_mapping.rememberable? -%>
	<div><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Recordarme' %></div>
    <% end -%>

    <div><%= f.submit "Iniciar sesión", :class => 'btn btn-primary' %></div>
<% end %>

<%= render "devise/shared/links" %>
