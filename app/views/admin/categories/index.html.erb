    <td><%= category.hotels.count %></td>
    <td><%= link_to 'Editar', edit_admin_category_path(category), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Eliminar', [:admin, category], method: :delete, data: { confirm: 'Â¿Estas seguro?' }, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

