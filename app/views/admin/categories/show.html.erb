<p id="notice"><%= notice %></p>

<p>
  <b>Categoria:</b>
  <%= @category.name %>
</p>

<h3>Hoteles</h3>

<table class="table table-bordered">

    <tr>
	<th>Hotel</th>
    </tr>
    <% @category.hotels.each do |hotel| %>
	<tr>
	    <td><%= link_to hotel.name, admin_hotel_path(hotel) %></td>
	</tr>
    <% end %>
</table>

<br />

<%= link_to 'Editar', edit_admin_category_path(@category), :class => 'btn' %>
<%= link_to 'Regresar', admin_categories_path, :class => 'btn' %>
