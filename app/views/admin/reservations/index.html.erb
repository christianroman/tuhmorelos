<h1>Reservaciones</h1>

<table class="table table-bordered">
  <tr>
    <th>Habitación</th>
    <th>Cliente</th>
    <th>Check in</th>
    <th>Check out</th>
    <th>Estado</th>
    <th></th>
    <th></th>
  </tr>

<% @reservations.each do |reservation| %>
  <tr>
    <td><%= link_to reservation.id, admin_reservation_path(reservation) %></td>
    <td><%= reservation.guest_id %></td>
    <td><%= reservation.check_in %></td>
    <td><%= reservation.check_out %></td>
    <td><%= reservation.status_id %></td>
    <td><%= link_to 'Editar', edit_admin_reservation_path(reservation), :class => 'btn btn-small' %></td>
    <td><%= link_to 'Eliminar', [:admin, reservation], method: :delete, data: { confirm: '¿Estas seguro?' }, :class => 'btn btn-small btn-danger' %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nueva Reservación', new_admin_reservation_path, :class => 'btn btn-primary' %>
