<div class="well">
    <h2>Reservaciones</h2>
</div>

<div class="button-wrapper">
    <%= link_to 'Nueva Reservación', new_admin_reservation_path, :class => 'btn btn-primary' %>
</div>

<table class="table table-bordered table-striped">
    <thead>
	<tr>
	    <th>No.</th>
	    <th>Hotel</th>
	    <th>Habitación</th>
	    <th>Cliente</th>
	    <th>Check in</th>
	    <th>Check out</th>
	    <th>Total</th>
	    <th>Estado</th>
	    <th></th>
	    <th></th>
	</tr>
    </thead>
    <tbody>
	<% @reservations.each do |reservation| %>
	    <tr>
		<td><%= link_to reservation.id, admin_reservation_path(reservation) %></td>
		<td><%= link_to reservation.hotel.name, admin_hotel_path(reservation.hotel) %></td>
		<td><%= link_to reservation.room.name, admin_room_path(reservation.room_id) %></td>
		<td><%= reservation.guest.nil? ? 'Ninguno' : link_to(reservation.guest.name, admin_guest_path(reservation.guest)) %></td>
		<td><%= reservation.check_in %></td>
		<td><%= reservation.check_out %></td>
		<td>$<%= reservation.total_amount.nil? ? '0' : reservation.total_amount %></td>
		<td><span class="label"><%= reservation.status_human %></span></td>
		<td><%= link_to 'Editar', edit_admin_reservation_path(reservation), :class => 'btn btn-small' %></td>
		<td><%= link_to 'Eliminar', [:admin, reservation], method: :delete, data: { confirm: '¿Estas seguro?' }, :class => 'btn btn-small btn-danger' %></td>
	    </tr>
	<% end %>
    </tbody>
</table>

<br />

